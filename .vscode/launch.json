    "version": "0.2.0",
    "configurations": [
        {
            "type": "python",
            "request": "launch",
            "name": "python server",
            "program": "${workspaceFolder}/server/main.py"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "node client server",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "debug"
            ],
            "cwd": "${workspaceFolder}/client",
            "port": 9229
        }
    ]
}